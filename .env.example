# FIA AML Case Management System - Environment Configuration
# Copy to .env and modify as needed

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Security
SECRET_KEY=aml-case-management-secure-key-change-in-production

# Database
DATABASE_URL=sqlite:///aml_system.db

# GitHub Integration
GITHUB_REPO_OWNER=FIA-AMLC
GITHUB_REPO_NAME=aml-case-data
GITHUB_TOKEN=  # Optional: for private repositories

# API Configuration
API_PORT=5000
API_HOST=0.0.0.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=aml_system.log

# JWT Configuration
JWT_SECRET=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256

# Database Backup
BACKUP_ENABLED=True
BACKUP_INTERVAL=86400  # 24 hours in seconds
